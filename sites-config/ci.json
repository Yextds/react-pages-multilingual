{
  "artifactStructure": {
    "assets": [
      {
        "root": "dist",
        "pattern": "assets/**/*"
      }
    ],
    "features": "sites-config/features.json",
    "plugins": [
      {
        "pluginName": "Generator",
        "sourceFiles": [
          {
            "root": "sites-plugins/Generator",
            "pattern": "*{.ts,.json}"
          },
          {
            "root": "dist",
            "pattern": "assets/{server,static,renderer}/**/*{.js,.css}"
          },
          {
            "root": "dist",
            "pattern": "plugin/*{.json}"
          }
        ],
        "event": "ON_PAGE_GENERATE",
        "functionName": "Generate"
      },
      {
        "pluginName": "onUrlChangePlugin",
        "sourceFiles": [
          {
            "root": "sites-plugins/onUrlChangePlugin",
            "pattern": "*{.ts,.json}"
          }
        ],
        "event": "ON_URL_CHANGE",
        "functionName": "onUrlChange"
      },
      {
        "pluginName": "apiPlugin",
        "sourceFiles": [
          {
            "root": "sites-plugins/apiPlugin",
            "pattern": "*{.ts,.json}"
          }
        ],
        "event": "API",
        "functionName": "apiPlugin"
      }
    ]
  },
  "dependencies": {
    "installDepsCmd": "npm install",
    "requiredFiles": [
      "package.json",
      "package-lock.json",
      ".npmrc"
    ]
  },
  "buildArtifacts": {
    "buildCmd": "npm run build:local"
  },
  "livePreview": {
    "serveSetupCmd": ":"
  }
}